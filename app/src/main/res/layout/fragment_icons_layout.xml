<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mozilla.hackathon.kiboko.fragments.IconsFragment">

    <GridView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:id="@+id/icons_gridview"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:numColumns="4"
        android:layout_below="@+id/icons_button"
        android:columnWidth="50dp">

    </GridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ready for a challenge?"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorTextPrimary" />

    <Button
        android:id="@+id/icons_button"
        android:text="@string/play_icon_quiz_text"
        android:textColor="@color/colorTextPrimary"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>